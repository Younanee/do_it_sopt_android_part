<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:background="#b2ff59"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="안녕!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#64ffda"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="안녕!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#66bb6a"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:text="안녕!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <RelativeLayout
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_main_act_first"
                android:text="옥의티"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_main_act_first"
                android:text="첫번째"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_main_act_what_is_your_part"
            android:hint="나의 파트는 무엇?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_main_act_part_ok"
            android:text="확인"
            android:layout_below="@+id/et_main_act_what_is_your_part"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>




</LinearLayout>